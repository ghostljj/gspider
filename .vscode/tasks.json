{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Go: build _examples/test1.go",
      "type": "shell",
      "command": "go build -gcflags \"all=-N -l\" ${workspaceFolder}/_examples/test1.go",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$go"],
      "presentation": {
        "reveal": "always",
        "revealProblems": "always",
        "panel": "dedicated",
        "echo": true
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Go: test all",
      "type": "shell",
      "command": "go test ./... -v",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$go"]
    }
  ]
}